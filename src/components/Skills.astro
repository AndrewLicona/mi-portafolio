---
import { skills } from "../data/skills.js";
---

<section id="habilidades" class="section">
  <h2 class="text-3xl md:text-5xl font-bold mb-16 text-center text-accent p-10">Habilidades</h2>
  
  <div class="max-w-4xl mx-auto">
    <!-- Lenguajes -->
    <div class="mb-12">
      <h3 class="text-2xl font-semibold mb-8 text-center text-text-strong p-5">Lenguajes</h3>
      <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 gap-8 justify-items-center">
        {skills.languages.map(skill => (
          <div class="flex flex-col items-center justify-center gap-4 transition-transform transform hover:scale-110">
            <img src={skill.imageUrl} alt={`Logo de ${skill.name}`} class="w-16 h-16 object-contain" />
            <span class="text-sm font-medium text-text-muted">{skill.name}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- Herramientas -->
    <div>
      <h3 class="text-2xl font-semibold mb-8 text-center text-text-strong p-5">Herramientas</h3>
      <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 gap-8 justify-items-center">
        {skills.tools.map(skill => (
          <div class="flex flex-col items-center justify-center gap-4 transition-transform transform hover:scale-110">
            <img src={skill.imageUrl} alt={`Logo de ${skill.name}`} class="w-16 h-16 object-contain" />
            <span class="text-sm font-medium text-text-muted">{skill.name}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
