---
// src/components/Navbar.astro
import ThemeSelector from './ThemeSelector.astro';
import MobileMenu from './MobileMenu.astro';
import { navLinks } from '../data/navLinks.js';
---

<nav class="fixed top-0 left-0 w-full z-50 bg-base/80 backdrop-blur-md border-b border-base-light transition-colors">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="/" class="text-xl font-bold text-text-strong hover-accent transition-colors z-50">
      Andrew<span class="text-accent"> Licona</span>
    </a>

    <!-- Navegación Desktop (oculta en móvil) -->
    <ul class="hidden md:flex items-center gap-4 text-sm font-medium">
      {navLinks.map(link => (
        <li><a href={link.href} class="hover-accent transition-colors">{link.text}</a></li>
      ))}
    </ul>

    <!-- Controles Desktop y Mobile -->
    <div class="flex items-center gap-3 z-50">
      <!-- Selector de tema (visible siempre) -->
      <ThemeSelector />
      
      <!-- Menú hamburguesa (visible solo en móvil) -->
      <MobileMenu />
    </div>
  </div>
</nav>